<!-- include head  -->
<%- include('incs/header.ejs') %>

<!-- include navbar  -->
<%- include('incs/navbar.ejs') %>
<!-- Write content of page  -->

<div class="container mt-3">
    <% if(product === 'not') { %> 
        <h1 class="alert alert-danger">No product</h1>
    <% } else { %>
    <div class="row">
        <div class="col-md-6 col-12">
            <img src="/<%= product.image %>" class="card-img-top" alt="image">
            <form action="/cart" method="POST" class="mt-3">
                <input type="number" name="amount" placeholder="Entre amount" class="form-control">
                <input type="submit" value="Add to cart" class="btn btn-primary form-control mt-3">
            </form>
        </div>
        <div class="col-md-6 col-12">
            <h5 class="card-title mr-auto"><%= product.name %></h5>
            <p class="lead"><%= product.price %></p>
            <p class="card-text"><%= product.description %></p>
        </div>
    </div>
    <% } %>

</div>

<!-- end content of page  -->
<!-- include footer  -->
<%- include('incs/footer.ejs') %>