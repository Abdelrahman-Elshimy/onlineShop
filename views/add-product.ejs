<!-- Write content of page  -->

<section class="signup text-center pt-20 m-auto" style="max-width: 500px;">
    <div class="container mt-4">
        <img src="../illustrations-gallery-factory-worker.png" alt="login">
    </div>
    <div class="container mt-2">

        <form action="/admin/add-product" method="POST">
            <div class="form-group mb-2">
                <input type="text" name="name" placeholder="Product Name" required class="form-control">
            </div>
            <div class="form-group mb-2">
                <input type="number" name="price" placeholder="Product Price" required class="form-control">
            </div>

            <div class="form-group mb-2">
                <select name="category" class="form-control">
                    <option value="phones">phones</option>
                    <option value="computers">computers</option>
                    <option value="clothes">clothes</option>
                </select>
            </div>

            <div class="form-group mb-2">
                <textarea name="description" placeholder="Product Description" required class="form-control"></textarea>
            </div>
            <!-- <div class="form-group mb-2">
                <label for="image">Choose product image</label>
                <input type="file" name="image" id="image" class="form-control">
            </div> -->



            <div class="form-group mb-2 mt-4">
                <input type="submit" value="Add Product" class="btn btn-primary">
            </div>
        </form>

    </div>
</section>




<!-- end content of page  -->
